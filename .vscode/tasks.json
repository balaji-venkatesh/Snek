{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "compile",
            "type": "shell",
            "command": "javac ${fileBasename}",
            "options": {
                "cwd": "${fileDirname}/"
            }
        },
        {
            "label": "run",
            "type": "shell",
            "command": "java ${fileBasenameNoExtension}",
            "dependsOn": [
                "compile"
            ],
            "options": {
                "cwd": "${fileDirname}/"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}